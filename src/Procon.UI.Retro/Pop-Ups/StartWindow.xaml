<Window x:Class="Procon.UI.Retro.Pop_Ups.StartWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Name="start_Root" Title="Select Procon Type"
        MinHeight="200" MaxHeight="{Binding ElementName=start_Root, Path=MinHeight}"
        MinWidth="275"  MaxWidth="{Binding ElementName=start_Root, Path=MinWidth}">
    <DockPanel Margin="3">
        <TextBlock Name="start_Description" DockPanel.Dock="Top"
                   Text="How you would like Procon to run?"
                   TextWrapping="Wrap" TextAlignment="Center" />
        <Button Name="start_Continue" DockPanel.Dock="Bottom"
                Padding="10, 3" Content="Continue" Click="Continue_Click" />
        <Grid Name="start_Selection">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <RadioButton Name="start_Local" Grid.Column="0"
                         HorizontalAlignment="Center" VerticalAlignment="Center"
                         GroupName="RunType" Content="Locally" IsChecked="True" />
            <RadioButton Name="start_Remote" Grid.Column="1"
                         HorizontalAlignment="Center" VerticalAlignment="Center"
                         GroupName="RunType" Content="Remotely" />
        </Grid>
    </DockPanel>
</Window>

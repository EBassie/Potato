    <!-- Enum Data Template -->
    <DataTemplate x:Key="EnumTemplate">
        <Label IsHitTestVisible="False" Content="{Binding Converter={StaticResource enumConv}}" />
    </DataTemplate>




    <!-- Chat Box Data Template -->
    <DataTemplate x:Key="ChatBoxTemplate">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" SharedSizeGroup="Time" />
                <ColumnDefinition Width="3" />
                <ColumnDefinition Width="Auto" SharedSizeGroup="Sender" />
                <ColumnDefinition Width="3" />
                <ColumnDefinition Width="Auto" SharedSizeGroup="Subset" />
                <ColumnDefinition Width="3" />
                <ColumnDefinition Width="Auto" SharedSizeGroup="Receiver" />
                <ColumnDefinition Width="3" />
                <ColumnDefinition Width="*" MinWidth="50"/>
            </Grid.ColumnDefinitions>
            <TextBlock Grid.Column="0" IsHitTestVisible="False" TextWrapping="NoWrap"
                       Text="{Binding Path=Created, Converter={StaticResource dateConverter}}" />
            <TextBlock Grid.Column="2" IsHitTestVisible="False" TextWrapping="NoWrap"
                       Text="{Binding Path=Author.Name}" />
            <TextBlock Grid.Column="4" IsHitTestVisible="False" TextWrapping="NoWrap"
                       Text="{Binding Path=Subset.Context}" />
            <TextBlock Grid.Column="6" IsHitTestVisible="False" TextWrapping="NoWrap">
                    <TextBlock.Text>
                        <PriorityBinding FallbackValue="All">
                            <Binding Path="Subset.Player" Converter="{StaticResource nullToUnset}" />
                            <Binding Path="Subset.Squad"  Converter="{StaticResource nullToUnset}" />
                            <Binding Path="Subset.Team"   Converter="{StaticResource nullToUnset}" />
                        </PriorityBinding>
                    </TextBlock.Text>
            </TextBlock>
            <TextBlock Grid.Column="8" IsHitTestVisible="False" TextWrapping="NoWrap" Text="{Binding Path=Text}" />
        </Grid>
    </DataTemplate>
    
    
    
    <!-- Status Bar Data Template -->
    <DataTemplate x:Key="StatusBarTemplate">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" SharedSizeGroup="Key" />
                <ColumnDefinition Width="3" />
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="6" />
                <ColumnDefinition Width="Auto" />

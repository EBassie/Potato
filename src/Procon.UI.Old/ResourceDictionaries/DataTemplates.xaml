            <TextBlock Grid.Column="2" Style="{StaticResource style_TextBlockSubHeader}" TextWrapping="Wrap" IsHitTestVisible="False">
                <TextBlock.Text>
                    <MultiBinding Converter="{StaticResource serverVarConv}" ConverterParameter="Sub">
                        <Binding />
                        <Binding Path="Value" />
                    </MultiBinding>
                </TextBlock.Text>
            </TextBlock>
            <Line Grid.Column="4" Y1="2" Y2="14" Stroke="Gray" />
        </Grid>
    </DataTemplate>
</ResourceDictionary>
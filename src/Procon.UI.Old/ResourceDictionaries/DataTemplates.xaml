            <Label Style="{StaticResource style_LabelSubHeader}" FontSize="9"  IsHitTestVisible="False">
                <Label.Content>
                    <MultiBinding Converter="{StaticResource connConv}" ConverterParameter="Sub">
                        <Binding />
                        <Binding Path="GameState.ConnectionState" />

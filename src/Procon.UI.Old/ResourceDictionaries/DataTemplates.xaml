            <TextBlock Grid.Column="0" Style="{StaticResource style_TextBlockTopHeader}" TextWrapping="Wrap" IsHitTestVisible="False">
                <TextBlock.Text>
                    <MultiBinding Converter="{StaticResource serverVarConv}" ConverterParameter="Main">

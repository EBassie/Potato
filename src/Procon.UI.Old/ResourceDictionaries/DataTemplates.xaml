<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <!--
    FOR ALL DATA TEMPLATES:
    Remember to multi-bind the information that you want INotifyPropertyChanged
    events for.  Simply binding to the base object that is passed in (which is
    subsituted by the blank <Binding /> tag) will NOT work.  You MUST bind to
    the properties that, when changed, you want the UI to updated.  These are
    generally not used in the converter class itself.
    -->
    
    <!-- Interfaces Data Template -->
    <DataTemplate x:Key="InterfacesTemplate">
        <StackPanel>
            <Label Style="{StaticResource style_LabelTopHeader}" FontSize="11" IsHitTestVisible="False">
                <Label.Content>
                    <MultiBinding Converter="{StaticResource interConv}" ConverterParameter="Main">
                        <Binding />
                        <Binding Path="Layer.ConnectionState" />
                        <Binding Path="Layer.Hostname" />
                        <Binding Path="Layer.Port" />
                    </MultiBinding>
                </Label.Content>
            </Label>
            <Label Style="{StaticResource style_LabelSubHeader}" FontSize="9"  IsHitTestVisible="False">
                <Label.Content>
                    <MultiBinding Converter="{StaticResource interConv}" ConverterParameter="Sub">
                        <Binding  />
                        <Binding Path="Connections.Count" />
                    </MultiBinding>
                </Label.Content>
            </Label>
        </StackPanel>
    </DataTemplate>

    

    <!-- Connections Data Template -->

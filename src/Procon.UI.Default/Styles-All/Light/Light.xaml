            </Trigger>
            <Trigger Property="IsPressed" Value="True">
                <Setter Property="Background" Value="{StaticResource BrushSpecialPress}" />
            </Trigger>
            <Trigger Property="IsEnabled" Value="False">
                <Setter Property="Opacity"    Value="0.7" TargetName="PART_Border" />
                <Setter Property="Foreground" Value="Gray" />
            </Trigger>
        </ControlTemplate.Triggers>
    </ControlTemplate>
    <ControlTemplate x:Key="TemplateRadioButtonPlayers"  TargetType="{x:Type RadioButton}">
        <Image Name="PART_Content"
               Width="{TemplateBinding Width}"
               Height="{TemplateBinding Height}"
               Margin="{TemplateBinding Margin}"
               VerticalAlignment="{TemplateBinding VerticalAlignment}"
               HorizontalAlignment="{TemplateBinding HorizontalAlignment}"
               Source="{Binding
                   Source={x:Static view:InstanceViewModel.PublicProperties},
                   Path=[Images][Content][Players][Default].Value}" />
        <ControlTemplate.Triggers>
            <Trigger Property="IsMouseOver" Value="True">
                <Setter Property="Source"
                        Value="{Binding
                            Source={x:Static view:InstanceViewModel.PublicProperties},
                            Path=[Images][Content][Players][Hover].Value}"
                        TargetName="PART_Content" />
            </Trigger>
            <Trigger Property="IsPressed" Value="True">
                <Setter Property="Source"
                        Value="{Binding
                            Source={x:Static view:InstanceViewModel.PublicProperties},
                            Path=[Images][Content][Players][Press].Value}"
                        TargetName="PART_Content" />
            </Trigger>
            <Trigger Property="IsChecked" Value="True">
                <Setter Property="Source"
                        Value="{Binding
                            Source={x:Static view:InstanceViewModel.PublicProperties},
                            Path=[Images][Content][Players][Active].Value}"
                        TargetName="PART_Content" />
            </Trigger>
            <Trigger Property="IsEnabled" Value="False">
                <Setter Property="Source"
                        Value="{Binding
                            Source={x:Static view:InstanceViewModel.PublicProperties},
                            Path=[Images][Content][Players][Disabled].Value}"
                        TargetName="PART_Content" />
            </Trigger>
        </ControlTemplate.Triggers>
    </ControlTemplate>

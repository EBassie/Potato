<StackPanel x:Class="Procon.UI.Default.Root.Dashboard.Feed.FeedView"
            xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
            xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
            xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
            xmlns:sys="clr-namespace:System;assembly=mscorlib"
            xmlns:conv="clr-namespace:Procon.UI.API.Converters;assembly=Procon.UI.API"
            xmlns:view="clr-namespace:Procon.UI.API.ViewModels;assembly=Procon.UI.API"
            Name="DashboardFeed">
    <StackPanel.Resources>
        <conv:TextLocalizationConverter x:Key="TextLoc" />
        <conv:EnumLocalizationConverter x:Key="EnumLoc" />
        <DataTemplate DataType="{x:Type sys:Enum}">
            <TextBlock Text="{Binding Converter={StaticResource EnumLoc}}" />
        </DataTemplate>
    </StackPanel.Resources>
    
    <TextBlock TextWrapping="Wrap"
               Background="#30333333"
               Foreground="#FF000000"
               Margin="0, 0, 0, 3">
        This might be something like, a feed or something that the user can subscribe to?
    </TextBlock>
    <TextBlock TextWrapping="Wrap"
               Background="#28333333"
               Foreground="#CC000000"
               Margin="0, 0, 0, 3">
        Like maybe this panel will be the latest BF3 tweet.
    </TextBlock>
    <TextBlock TextWrapping="Wrap"
               Background="#20333333"
               Foreground="#99000000"
               Margin="0, 0, 0, 3">
        And this will be the latest post on Valve's news page.
    </TextBlock>
    <TextBlock TextWrapping="Wrap"
               Background="#18333333"
               Foreground="#66000000"
               Margin="0, 0, 0, 3">
        While this one is Homefronts facebook page.
    </TextBlock>
    <TextBlock TextWrapping="Wrap"
               Background="#10333333"
               Foreground="#33000000"
               Margin="0, 0, 0, 3">
        The possibilities are endless?
    </TextBlock>
</StackPanel>

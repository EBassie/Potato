                <DataTrigger Binding="{Binding Source={x:Static view:InstanceViewModel.PublicProperties}, Path=[Panel].Value}" Value="{x:Type view:ConnectionViewModel}">
                    <Setter Property="Visibility" Value="Visible" />
                </DataTrigger>
            </Style.Triggers>
        </Style>
    </Grid.Style>
    -->

    <!--The layout of content-->
    <Grid Name="ConnectionLayoutControl">
        <Grid.RowDefinitions>
            <RowDefinition Height="20" /> <!--Infobar-->
            <RowDefinition Height="3"  />
            <RowDefinition Height="*"  /> <!--Main Content-->
            <RowDefinition Height="3"  />
            <RowDefinition MinHeight="175" Height="175" MaxHeight="500" /> <!--Chat And Events-->
        </Grid.RowDefinitions>
    </Grid>
</Grid>

<!-- Content -->
<DockPanel x:Class="Procon.UI.Default.Root.Tutorial.NewInterface.NewInterfaceView"
           xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
           xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
           xmlns:eapi="clr-namespace:Procon.UI.API;assembly=Procon.UI.API"
           xmlns:acmd="clr-namespace:Procon.UI.API.Commands;assembly=Procon.UI.API"
           xmlns:conv="clr-namespace:Procon.UI.API.Converters;assembly=Procon.UI.API"
           xmlns:util="clr-namespace:Procon.UI.API.Utils;assembly=Procon.UI.API"
           xmlns:view="clr-namespace:Procon.UI.API.ViewModels;assembly=Procon.UI.API"
           Name="TutorialNewInterface"
           Width="500"
           VerticalAlignment="Center"
           HorizontalAlignment="Center">
    <TextBlock Name="TutorialNewInterfaceAgreement"
               DockPanel.Dock="Bottom"
               Margin="0, 20, 0, 0"
               Opacity="0.5"
               Text="{Binding
                   Converter={conv:LocalizationText},
                   ConverterParameter=Default.Root.Tutorial.NewInterface.Agreement}" />
    <Button Name="TutorialNewInterfaceRemote"
            DockPanel.Dock="Bottom"
            Margin="0, 15, 0, 0"
            Padding="0, 10"
            Command="{Binding
                Source={x:Static eapi:ExtensionApi.Commands},
                Path=[Tutorial][NewInterface][Remote].Value}"
            Content="{Binding
                Converter={conv:LocalizationText},
                ConverterParameter=Default.Root.Tutorial.NewInterface.Remote}" />
    <Grid Name="TutorialNewInterfaceInput"
          DockPanel.Dock="Bottom">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="0.50*" />
            <ColumnDefinition Width="15" />
            <ColumnDefinition Width="0.50*" />
        </Grid.ColumnDefinitions>

        <Label Name="TutorialNewInterfaceInputHostText"
               Grid.Row="0" Grid.Column="0"
               Padding="0, 10"
               Content="{Binding 
                   Converter={conv:LocalizationText},
                   ConverterParameter=Default.Root.Tutorial.NewInterface.Host}" />
        <Label Name="TutorialNewInterfaceInputPortText"
               Grid.Row="0" Grid.Column="2"
               Padding="0, 10"
               Content="{Binding
                   Converter={conv:LocalizationText},
                   ConverterParameter=Default.Root.Tutorial.NewInterface.Port}" />
        <Label Name="TutorialNewInterfaceInputUserText"
               Grid.Row="2" Grid.Column="0"
               Padding="0, 10"
               Content="{Binding
                   Converter={conv:LocalizationText},
                   ConverterParameter=Default.Root.Tutorial.NewInterface.User}" />
        <Label Name="TutorialNewInterfaceInputPassText"
               Grid.Row="2" Grid.Column="2"
               Padding="0, 10"
               Content="{Binding
                   Converter={conv:LocalizationText},
                   ConverterParameter=Default.Root.Tutorial.NewInterface.Pass}" />
        <TextBox Name="TutorialNewInterfaceInputHost"
                 Grid.Row="1" Grid.Column="0"
                 Height="39"
                 Text="{Binding
                     Source={x:Static eapi:ExtensionApi.Properties},
                     Path=[Tutorial][NewInterface][Host].Value,
                     UpdateSourceTrigger=PropertyChanged}" />
        <TextBox Name="TutorialNewInterfaceInputPort"
                 Grid.Row="1" Grid.Column="2"
                 Height="39"
                 Text="{Binding
                     Source={x:Static eapi:ExtensionApi.Properties},
                     Path=[Tutorial][NewInterface][Port].Value,
                     UpdateSourceTrigger=PropertyChanged}" />
        <TextBox Name="TutorialNewInterfaceInputUser"
                 Grid.Row="3" Grid.Column="0"
                 Height="39"
                 Text="{Binding
                     Source={x:Static eapi:ExtensionApi.Properties},
                     Path=[Tutorial][NewInterface][User].Value,
                     UpdateSourceTrigger=PropertyChanged}" />
        <PasswordBox Name="TutorialNewInterfaceInputPass"
                     Grid.Row="3" Grid.Column="2"
                     Height="39"
                     acmd:AttachedCommand.Event="PasswordChanged"
                     acmd:AttachedCommand.Command="{Binding
                         Source={x:Static eapi:ExtensionApi.Commands},
                         Path=[Tutorial][NewInterface][Pass].Value}" />
    </Grid>
    <Button Name="TutorialNewInterfaceLocal"
            DockPanel.Dock="Bottom"
            Margin="0, 0, 0, 5"
            Padding="0, 10"
            Command="{Binding
                Source={x:Static eapi:ExtensionApi.Commands},
                Path=[Tutorial][NewInterface][Local].Value}"
            Content="{Binding
                Converter={conv:LocalizationText},
                ConverterParameter=Default.Root.Tutorial.NewInterface.Local}" />
    <Image Name="TutorialNewInterfaceImage"
           Source="{Binding
               Source={x:Static eapi:ExtensionApi.Properties},
               Path=[Images][Procon][Large].Value}" />
</DockPanel>
